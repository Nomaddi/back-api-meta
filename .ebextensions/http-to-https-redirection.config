Resources:
  ListenerRuleHTTPRedirect:
    Type: AWS::ElasticLoadBalancingV2::ListenerRule
    Properties:
      Actions:
        - Type: redirect
          RedirectConfig:
            Protocol: HTTPS
            Port: "443"
            StatusCode: HTTP_301
      Conditions:
        - Field: http-request-method
          HttpRequestMethodConfig:
            Values: ["GET", "POST"]
      ListenerArn:
        Ref: AWSEBLoadBalancerListener
      Priority: 1
